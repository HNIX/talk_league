<h1 align="center">Listing all streams</h1>

<% @streams.each do |stream| %>

<div class="row">

<div class="col-xs-8 col-xs-offset-2">

<div class="well well-lg">

<div class="stream-title">

<%= link_to stream.title, stream_path(stream) %>

</div>

<div class="stream-body">

<%= truncate(stream.go_live, length: 100) %>

</div>

<div class="article-actions">

<%= link_to "Edit this stream", edit_stream_path(stream), class: "btn btn-xs btn-primary" %>

<%= link_to "Delete this stream", stream_path(stream), method: :delete,

data: { confirm: "Are you sure you want to delete the stream?"},

class: "btn btn-xs btn-danger" %>

</div>

</div>

</div>

</div>

<% end %>
